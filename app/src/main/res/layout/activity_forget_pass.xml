<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/fpc"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="950dp"
    tools:context=".ForgetPass"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/fl"
            android:background="@color/fpc"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fpts"
                android:text="Forget"

                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="160dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="205dp"
                android:id="@+id/ct"
                android:textStyle="bold"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fl"
            android:background="@drawable/style">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:id="@+id/sl"
                        android:layout_width="match_parent"
                        android:layout_height="550dp"
                        android:layout_below="@+id/ct"
                        android:layout_marginTop="15dp"

                        android:gravity="center_horizontal">


                        <EditText
                            android:id="@+id/email"

                            android:layout_width="260dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/edittext"
                            android:hint="Email"
                            android:textColor="@color/black"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:gravity="clip_horizontal"
                            android:textColorHint="#343434"
                            android:textSize="18dp" />




                        <Button
                            android:layout_width="260dp"
                            android:layout_height="48dp"
                            android:layout_below="@+id/email"
                            android:layout_marginTop="37dp"

                            android:background="@drawable/button"
                            android:id="@+id/reset"
                            android:text="Reset"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            />

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/prgrss"
                            android:layout_below="@+id/email"
                            android:layout_marginTop="37dp"
                            android:visibility="invisible"
                            android:layout_marginLeft="110dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ah-ha! I remember"
                            android:textSize="17dp"
                            android:id="@+id/or"
                            android:textColor="#171717"
                            android:layout_marginTop="200dp"
                            android:layout_marginLeft="65dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="back to LogIn"
                            android:textSize="19dp"
                            android:id="@+id/btl"
                            android:textStyle="bold"
                            android:textColor="#A8D42F"
                            android:background="@drawable/textpress"
                           android:layout_below="@+id/or"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="75dp"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Please remember your password!!!"
                            android:textSize="17dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="410dp"
                            android:textColor="#171717"/>


                    </RelativeLayout>
                </ScrollView>
            </LinearLayout>


        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>

