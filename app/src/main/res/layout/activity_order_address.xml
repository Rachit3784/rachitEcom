<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderAddressActivity">

<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appbar"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/magentaaa"
        app:titleTextColor="@color/black"
       app:titleMarginStart="-20dp"

        app:title="Continue Shopping"
        android:id="@+id/Adrsstool"/>
</com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/firstframe"
        android:background="@color/white"
        android:layout_below="@+id/appbar">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:id="@+id/prdcimag"
            android:src="@color/magentaaa"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="250dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/name"
            android:text="Product Name"
            android:layout_toRightOf="@+id/prdcimag"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/dollar"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@+id/name"
            android:text="$"
            android:layout_toRightOf="@+id/prdcimag"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/prize"

            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@+id/name"
            android:text="Prize"
            android:layout_toRightOf="@+id/dollar"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:layout_below="@id/firstframe"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address  : "
            android:textSize="25dp"
            android:id="@+id/at"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/at"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/addrss"
            android:layout_marginTop="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin  :"
            android:textSize="25dp"
            android:id="@+id/pt"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pt"
            android:padding="5dp"
            android:id="@+id/pin"
            android:inputType="phone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Edit"
            android:id="@+id/edit"
            android:background="@drawable/button"
            android:layout_marginStart="15dp"
            android:layout_alignParentBottom="true"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Next"
            android:id="@+id/next"
            android:background="@drawable/button"
            android:layout_marginStart="180dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</RelativeLayout>