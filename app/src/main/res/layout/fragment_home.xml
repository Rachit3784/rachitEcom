<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".HomeFrag">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/ct"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:contentScrim="@android:color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:background="@color/magentaaa"
            app:scrimAnimationDuration="1500"
           app:scrimVisibleHeightTrigger="80dp"
           >
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/spi"
                android:layout_marginTop="13dp"
                android:layout_marginStart="20dp"
              android:src="@drawable/progile"
                android:scaleType="fitXY"
                app:strokeWidth="2dp"
              android:padding="2dp"
                app:strokeColor="@color/black"
                android:clipToOutline="false"
                app:shapeAppearance="@style/Profilemainshape"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:text="ZenZest"
                android:id="@+id/usertxt"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/chatb"
                android:layout_marginTop="15dp"
                android:layout_marginStart="290dp"
                android:src="@drawable/chatsymbol"
                android:scaleType="fitXY"

                android:padding="2dp"

                android:clipToOutline="false"
                app:shapeAppearance="@style/Profilemainshape"
                />

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"/>


            <androidx.appcompat.widget.SearchView
                android:id="@+id/sv"
                android:elevation="3dp"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginBottom="7dp"
                android:outlineAmbientShadowColor="@color/black"
                android:layout_gravity="bottom"
                android:background="@drawable/searchedit"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="16dp"
                app:queryHint="Search Here..."
                app:iconifiedByDefault="false"
                app:searchIcon="@drawable/searchtool"
              />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#5D5C5C"
    android:layout_gravity="bottom"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/Rachit"
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="70dp"
                android:clipToOutline="false"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/rachit"
                app:shapeAppearance="@style/Profilemainshape"

                app:strokeColor="@color/golden"
                app:strokeWidth="3dp" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/refresher"
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_marginStart="290dp"
                android:layout_marginTop="67dp"
                android:clipToOutline="false"
                android:padding="2dp"
                android:backgroundTint="@drawable/refresheredit"
                android:scaleType="fitXY"
                android:src="@drawable/refresher"
                app:shapeAppearance="@style/Profilemainshape"
                />




        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:id="@+id/firstframe"
            android:background="@color/magentaaa"
           >

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="13dp"
                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
              android:background="@drawable/imagedes"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/homeappliances"
                    android:id="@+id/elct"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics"
                android:textSize="13dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="76dp"
                android:textColor="@color/black"/>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="13dp"

                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="104dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/jwellary"
                    android:id="@+id/jwell"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jwellary"
                android:textSize="13dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="76dp"
                android:textColor="@color/black"/>
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"

                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="13dp"

                android:layout_marginLeft="183dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/suit"
                    android:id="@+id/wmn"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Womens\n    Wear"
                android:textSize="11dp"
                android:layout_marginLeft="198dp"
                android:layout_marginTop="75dp"
                android:textColor="@color/black"/>
            <androidx.cardview.widget.CardView

                app:cardUseCompatPadding="true"
                android:elevation="12dp"
                app:cardCornerRadius="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="13dp"

                android:layout_marginLeft="260dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/menswear"
                    android:id="@+id/mnw"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mens Wear"
                android:textSize="13dp"
                android:layout_marginLeft="265dp"
                android:layout_marginTop="76dp"
                android:textColor="@color/black"/>


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/secondframe"
            android:background="@color/white"
            android:layout_below="@+id/firstframe"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                app:lottie_autoPlay="true"
                android:layout_height="200dp"
                android:id="@+id/refreshanim"
                android:visibility="invisible"
                app:lottie_rawRes="@raw/loader"
                app:lottie_loop="true"
              android:layout_gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rcvt"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/thirdframe"
            android:background="@color/white"
            android:layout_below="@+id/secondframe"
           >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/firstframe"
                />
        </FrameLayout>


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
