<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#AFD93C"/> <!-- Green when pressed -->
            <corners android:radius="10dp"/> <!-- Rectangular corners -->

        </shape>
    </item>

    <!-- Default button state (not pressed) -->
    <item>
        <shape>
            <solid android:color="#D0E473"/> <!-- Default color (light gray) -->
            <corners android:radius="10dp"/> <!-- Rectangular corners -->

        </shape>
    </item>
</selector>
