<!-- custom_rating_star.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Empty star (background color) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Gray color for empty stars -->
        </shape>
    </item>
    <!-- Filled star (foreground color) -->
    <item android:id="@android:id/secondaryProgress">
        <shape android:shape="rectangle">
            <solid android:color="#FFB400" /> <!-- Yellow color for half stars -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" /> <!-- Gold color for filled stars -->
        </shape>
    </item>
</layer-list>
